<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lec.spring.mytrip.repository.PackageAttachmentRepository">

    <!-- 첨부파일 저장 -->
    <insert id="insertAttachment" parameterType="com.example.domain.PackagePostAttachment">
        INSERT INTO package_attachment (package_id, package_attachment_file)
        VALUES (#{packageId}, #{fileName})
    </insert>

    <!-- 패키지 ID로 첨부파일 목록 조회 -->
    <select id="findByPackageId" parameterType="Long" resultType="com.example.domain.PackagePostAttachment">
        SELECT package_id, package_attachment_file
        FROM package_attachment
        WHERE package_id = #{packageId}
    </select>

    <!-- 첨부파일 ID로 첨부파일 조회 -->
    <select id="findByAttachmentId" parameterType="Long" resultType="com.example.domain.PackagePostAttachment">
        SELECT package_attachment_id, package_id, package_attachment_file
        FROM package_attachment
        WHERE package_attachment_id = #{packageAttachmentId}
    </select>

    <!-- 첨부파일 삭제 -->
    <delete id="deleteAttachment" parameterType="Long">
        DELETE FROM package_attachment
        WHERE package_attachment_id = #{packageAttachmentId}
    </delete>

    <!-- 첨부파일 이름 중복 확인 -->
    <select id="isFileNameExists" parameterType="String" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM package_attachment
        WHERE package_attachment_file = #{fileName}
    </select>

</mapper>